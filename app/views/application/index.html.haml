!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title lolPix
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_pack_tag 'application'
  %body
    %noscript
      = I18n.t('error.javascript_required')
    #overlay
      #loader.initial
        = image_tag 'logo.svg', alt: I18n.t('ui.loading')
    #modal-overlay
    #app
      = react_component('ServerSideApp', {user: logged_in_user}, {prerender: true})
    = yield
